     <script type="text/javascript">
        (
          async function() {
            const resources = document.querySelector("#ieresources");
            const apikey    = "hqw8qkg239s8c84c0k88g4owk4s00kg";
            const res1      = await fetch(`https://api.w3.org/groups/wg?apikey=${apikey}`);
            const wgs       = await res1.json();
            const res2      = await fetch(`https://api.w3.org/groups/ig?apikey=${apikey}`);
            const igs       = await res2.json();
            function sortGroups (a, b) {
              if (a.title < b.title) return -1;
              if (a.title > b.title) return 1;
              return 0;
            }
            const t = wgs._links.groups.concat(igs._links.groups).sort(sortGroups);
            let select = `<li>
            <label for="group">Apply as an Invited Expert for</label>
              <select name="group" id="group-select">
                <option value="">Select a group</option>`;
            t.forEach(element => {
              select += `<option value="${element.href.replace('https://api.w3.org/groups/', '')}">${element.title}</option>`;
            });
            select += `</select></li>`;
            resources.insertAdjacentHTML('beforeend', select);

            const groupSelect = document.querySelector('#group-select');
            groupSelect.addEventListener('change', e => {
              if (groupSelect.nextSibling) {
                groupSelect.nextSibling.remove();
              }
              let link = `<span>: <a href="https://www.w3.org/groups/${e.target.value}/apply-as-invited-expert">Application form for the ${e.target.options[e.target.selectedIndex].text}</a></span>`;
              groupSelect.insertAdjacentHTML('afterend', link);
            });
          }
        )();
     </script>
